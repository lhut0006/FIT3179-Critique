{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Global tweets for the 2020 American election",
        "fontSize": 14
    },
    "data": {
        "url": "https://raw.githubusercontent.com/lhut0006/FIT3179-Critique/refs/heads/main/datasets/daily_tweets.csv",
        "format": {
            "type": "csv"
        }
    },
    "width": 300,
    "height": 300,
    "layer": [
        {
            "mark": {
                "type": "line",
                "point": true
            },
            "encoding": {
                "x": {
                    "field": "date",
                    "type": "temporal",
                    "title": "Date",
                    "axis": {
                        "format": "%b %d, %Y",
                        "labelAngle": -45,
                        "labelLimit": 0
                    }
                },
                "y": {
                    "field": "tweet_count",
                    "type": "quantitative",
                    "title": "Number of Tweets"
                },
                "color": {
                    "field": "hashtag",
                    "type": "nominal",
                    "title": "Hashtag",
                    "scale": {
                        "scheme": "category10"
                    }
                },
                "tooltip": [
                    {
                        "field": "date",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "field": "tweet_count",
                        "type": "quantitative",
                        "title": "Tweet Count"
                    },
                    {
                        "field": "hashtag",
                        "type": "nominal",
                        "title": "Hashtag"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {
                        "date": "2020-10-22",
                        "event": "Second Presidential Debate"
                    },
                    {
                        "date": "2020-11-03",
                        "event": "Election Day"
                    }
                ]
            },
            "mark": "rule",
            "encoding": {
                "x": {
                    "field": "date",
                    "type": "temporal",
                    "title": "Event Date"
                },
                "color": {
                    "value": "red"
                },
                "size": {
                    "value": 2
                },
                "tooltip": [
                    {
                        "field": "date",
                        "type": "temporal",
                        "title": "Date"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {
                        "date": "2020-10-22",
                        "event": "Second Presidential Debate"
                    },
                    {
                        "date": "2020-11-03",
                        "event": "Election Day"
                    }
                ]
            },
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": 0,
                "dy": -40,
                "angle": -45
            },
            "encoding": {
                "x": {
                    "field": "date",
                    "type": "temporal",
                    "title": "Event Date"
                },
                "text": {
                    "field": "event"
                },
                "color": {
                    "value": "black"
                }
            }
        }
    ]
}